{
  "name": "figma-rest-mcp-server",
  "version": "1.0.0",
  "description": "MCP server with Figma REST API automation capabilities",
  "main": "dist/http-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/http-server.js",
